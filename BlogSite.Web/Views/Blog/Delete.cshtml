@using BlogSite.Application.Models.ViewModels.BlogViewModels
@model BlogDetailViewModel
@{
    ViewData["Title"] = "Blog Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Blog Yazısını Sil</h2>

<div class="card shadow-sm border-0 rounded p-4 bg-white">
    <h4 class="mb-3 text-danger">Bu blog yazısını silmek istediğinizden emin misiniz?</h4>

    <dl class="row">
        <dt class="col-sm-3">Başlık:</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Kategori:</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Yazar:</dt>
        <dd class="col-sm-9">@Model.AuthorUserName</dd>

        <dt class="col-sm-3">Tarih:</dt>
        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="mt-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">İptal</a>
            <button type="submit" class="btn btn-danger rounded-pill px-4">Sil</button>
        </div>
    </form>
</div>
