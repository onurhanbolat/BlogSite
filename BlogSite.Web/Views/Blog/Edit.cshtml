@model BlogSite.Application.Models.ViewModels.BlogViewModels.EditBlogViewModel

@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h3 class="text-dark mb-4 fw-semibold text-center">Blog Düzenle</h3>

            <div class="card shadow-sm border-0 rounded-4 p-4 bg-white">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input asp-for="Title" class="form-control rounded-pill px-4 py-2 shadow-none" placeholder="Blog başlığı girin" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Summary" class="form-label">Özet</label>
                        <input asp-for="Summary" class="form-control rounded-pill px-4 py-2 shadow-none" placeholder="Kısa bir özet yazın" />
                        <span asp-validation-for="Summary" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">İçerik</label>
                        <textarea asp-for="Content"
                                  class="form-control rounded-3 shadow-none"
                                  rows="6"
                                  placeholder="Blog içeriğini yazın..."></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CategoryId" class="form-label">Kategori</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories"
                                class="form-select rounded-pill px-4 py-2 shadow-none">
                            <option value="">-- Kategori Seçin --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">← İptal</a>
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-4">Güncelle</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
