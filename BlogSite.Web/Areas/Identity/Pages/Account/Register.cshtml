@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h5 class="text-center text-muted mb-4">Yeni bir hesap oluşturun</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" placeholder="Kullanıcı Adı" />
                <label asp-for="Input.UserName">Kullanıcı Adı</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="E-posta" />
                <label asp-for="Input.Email">E-posta</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Şifre" />
                <label asp-for="Input.Password">Şifre</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifreyi Onayla" />
                <label asp-for="Input.ConfirmPassword">Şifreyi Onayla</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-secondary w-100 rounded-pill py-2">Kayıt Ol</button>

            <div class="mt-3 text-center small">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Zaten hesabınız var mı? Giriş yap</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
